= category.error_messages
= category.text_field :name, label:  "Name"
= category.text_field :slug, label:  "Slug"
- if category.object.try(:persisted?)
  = category.select :main_post_id, options_from_collection_for_select(category.object.posts, :id, :title, category.object.main_post_id), {include_blank: true}, class: "form-control"

.form-actions
  = category.button t(".save"), class:  "btn btn-large btn-primary"

:javascript
  $("#category_main_post_id").select2()

